{
    "status": [
        {
            "code": 408, 
            "icon": "error", 
            "caption": "Error - Request Timeout!"
        },{
            "code": 416, 
            "icon": "error", 
            "caption": "Error - Range Not Satisfiable / Wrong Device!"
        },{
            "code": 428, 
            "icon": "error", 
            "caption": "Error - Precondition Required!"
        }
    ],
    "elements":[
        {
            "type": "RowLayout",
            "items": [
                {
                    "name": "Device",
                    "type": "Label",
                    "caption": "$DeviceString"
                },{
                    "name": "DeviceInfo",
                    "type": "PopupButton",
                    "caption": "Device Info",
                    "visible": "$DeviceInfoVisible",
                    "popup": {
                        "caption": "Device Info",
                        "items": [
                            {
                                "type": "List",
                                "name": "DeviceInfoValues",
                                "sort": {
                                    "column": "Name",
                                    "direction": "ascending"
                                },
                                "columns": [
                                    {
                                        "caption": "Name",
                                        "name": "Name",
                                        "width": "150px"
                                    },{
                                        "caption": "Value",
                                        "name": "Value",
                                        "width": "auto"
                                    }
                                ],
                                "values": "$DeviceInfoValues"
                            }
                        ]
                    }
                }
            ]
        },{
            "type": "RowLayout",
            "items": [
                {
                    "name": "PollTime",
                    "type": "NumberSpinner",
                    "caption": "PollTime",
                    "suffix": "Seconds"
                },{
                    "type": "Label",
                    "caption": "          "  
                },{
                    "name": "CheckFWTime",
                    "type": "NumberSpinner",
                    "caption": "Check for FW-Updates",
                    "suffix": "Hours"
                }
            ]
        },{
            "type": "Tree",
            "name": "IdentList",
            "caption": "Device Parameters",
            "visible": true,
            "add": false,
            "delete": true,
            "onEdit": "IPS_RequestAction($id, 'FormEditIdent', json_encode(array($IdentList['Poll'], $IdentList['Ident'])));",
            "sort": {
                "column": "Ident",
                "direction": "ascending"
            },
            "columns": [
                {
                    "caption": "Group",
                    "name": "Group",
                    "width": "150px",
                    "onClick": "IPS_RequestAction($id, 'FormAddIdent', json_encode(array('Group', $IdentList['Group'])));"
                },{
                    "caption": "Ident",
                    "name": "Ident",
                    "width": "200px",
                    "onClick": "IPS_RequestAction($id, 'FormAddIdent', json_encode(array('Ident', $IdentList['Ident'])));",
                    "save": true
                },{
                    "caption": "Name",
                    "name": "Name",
                    "width": "300px"
                },{
                    "caption": "Custom Name",
                    "name": "cName",
                    "width": "auto"
                },{
                    "caption": "Profile",
                    "name": "Profile",
                    "width": "200px"
                },{
                    "caption": "Custom Profile",
                    "name": "cProfile",
                    "width": "200px"
                },{
                    "caption": "FW",
                    "name": "FWVersion",
                    "width": "60px"
                },{
                    "caption": "Active",
                    "name": "Poll",
                    "width": "50px",
                    "align": "center",
                    "save": true,
                    "edit": {
                        "type": "CheckBox"
                    }
                }
            ],
            "values": "$IdentListValues"
        }
    ],
    "actions":[
        {
            "type": "RowLayout",
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "RequestRead",
                    "caption": "$RequestReadCaption",
                    "width": "1000px",
                    "enabled": true,
                    "value": "$RequestReadValue"
                },{
                    "type": "Button",
                    "caption": "Clear",
                    "onClick": "IPS_RequestAction($id, 'FormAddIdent', json_encode(array('Group', '')));"
                },{
                    "type": "ValidationTextBox",
                    "name": "EventName",
                    "caption": "Event Name"
                },{
                    "type": "Select",
                    "name": "EventType",
                    "caption": "Event Type",
                    "width": "100px",
                    "options": [
                        { "caption": "Cyclic", "value": 1 },
                        { "caption": "Trigger", "value": 0 }
                    ]
                },{
                    "type": "Button",
                    "name": "CreateEvent",
                    "caption": "Create Event",
                    "enabled": false,
                    "onClick": "IPS_RequestAction($id, 'CreateEvent', json_encode(array($EventName, $EventType, $RequestRead))); echo '$EventCreated';"
                },{
                    "type": "OpenObjectButton",
                    "name": "OpenEvent",
                    "caption": "Edit Event",
                    "visible": false,
                    "objectID": 0
                }
            ]
        }
    ]
}